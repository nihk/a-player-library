<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:keepScreenOn="true">

    <FrameLayout
        android:id="@+id/player_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/player_controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:importantForAccessibility="no"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:minWidth="@dimen/minimum_a11y_side"
            android:minHeight="@dimen/minimum_a11y_side"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/share"
            tools:visibility="visible" />

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:splitTrack="false"
            app:layout_constraintBottom_toTopOf="@id/time_barrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:max="100"
            tools:progress="55"
            tools:secondaryProgress="70" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/time_barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            app:constraint_referenced_ids="position,remaining" />

        <TextView
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@id/play_pause"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="02:21" />

        <TextView
            android:id="@+id/remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@id/position"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/position"
            tools:text="-20:35" />

        <ImageView
            android:id="@+id/seek_backward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:minWidth="@dimen/minimum_a11y_side"
            android:minHeight="@dimen/minimum_a11y_side"
            app:layout_constraintBottom_toBottomOf="@id/play_pause"
            app:layout_constraintEnd_toStartOf="@id/play_pause"
            app:layout_constraintTop_toTopOf="@id/play_pause"
            app:srcCompat="@drawable/rewind" />

        <ImageView
            android:id="@+id/play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:minWidth="@dimen/minimum_a11y_side"
            android:minHeight="@dimen/minimum_a11y_side"
            app:layout_constraintBottom_toTopOf="@id/bottom_row"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/play" />

        <ImageView
            android:id="@+id/seek_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:minWidth="@dimen/minimum_a11y_side"
            android:minHeight="@dimen/minimum_a11y_side"
            app:layout_constraintBottom_toBottomOf="@id/play_pause"
            app:layout_constraintStart_toEndOf="@id/play_pause"
            app:layout_constraintTop_toTopOf="@id/play_pause"
            app:srcCompat="@drawable/fast_forward" />

        <LinearLayout
            android:id="@+id/bottom_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/text_tracks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="@dimen/minimum_a11y_side"
                android:minHeight="@dimen/minimum_a11y_side"
                android:visibility="gone"
                app:srcCompat="@drawable/captions"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/video_tracks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="@dimen/minimum_a11y_side"
                android:minHeight="@dimen/minimum_a11y_side"
                android:visibility="gone"
                app:srcCompat="@drawable/video_settings"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/audio_tracks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="@dimen/minimum_a11y_side"
                android:minHeight="@dimen/minimum_a11y_side"
                android:visibility="gone"
                app:srcCompat="@drawable/audio"
                tools:visibility="visible" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>